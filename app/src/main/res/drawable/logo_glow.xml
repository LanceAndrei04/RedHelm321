<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outermost glow (light gray, medium opacity) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />  <!-- Light gray with 31% opacity -->
            <size
                android:width="240dp"
                android:height="240dp" />
        </shape>
    </item>

    <!-- Second layer (lighter red_secondary) -->
    <item
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp">
        <shape android:shape="oval">
            <solid android:color="#C8C3C3" />  <!-- Lighter red_secondary with 25% opacity -->
        </shape>
    </item>

    <!-- Third layer (dark gray, strong opacity) -->
    <item
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp">
        <shape android:shape="oval">
            <solid android:color="#FBFD1212" />  <!-- Dark gray with 69% opacity -->
        </shape>
    </item>

    <!-- Innermost core (full red_secondary) -->
    <item
        android:left="30dp"
        android:top="30dp"
        android:right="30dp"
        android:bottom="30dp">
        <shape android:shape="oval">
            <solid android:color="#810606" />  <!-- Full red_secondary -->
        </shape>
    </item>
</layer-list>